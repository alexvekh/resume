{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<header>
  <div class='nav'>
    {{#with navigation}}
      {{#each links}}
        <div class="nav-item">
                <a class="nav-link" href='{{href}}'>{{text}}</a>
        </div>
      {{/each}}
      <div class="nav-item"></div>
      <a href="#" class="nav-link disabled">Disabled</a>
    {{/with}}
      </div>
<div class="row g-2">
{{#with newsBlock}}
      <div class="display-6 text-center mt-5 mb-3"><b>{{title}}</b></div>
{{#each cards}}
<div class="col-3">
  <div class="card text-bg-dark"> 
    <div class="card-body">
      <div class="card-title">{{title}}
        {{#if isTop}} <div class="badge rounded-pill text-bg-primary">New</div>{{/if}}
        {{#if isNew}}<div class="badge rounded-pill text-bg-danger">Top</div>{{/if}}
      </div>
      <p>{{description}}</p>
    </div>
  </div>
</div>
{{/each}}
{{/with}}
</div>
</div>
<hr class="my-5">
</header>

<main>

<div class="col-12 mb-5">
  {{#with goodsBlock}}
  <div class="nav nav-tabs">
    {{#each tabs}}
      <div class="nav-item">
        <div class="nav-link
           {{#if isActive}}active{{/if}}
           {{#if isDisabled}}disabled{{/if}}
        ">{{text}}</div>
      </div>
    {{/each}}
  </div>
</div>


  
  <div class="row gx-2 gy-4">
    {{#each cards}}
      <div class="col-4">
        <div class="card">
          <img src="{{image}}" alt="{{title}} photo">
          <div class="card-body">
            <div class="card-title">
              <h5>{{title}}</h5>
              
              {{#if isHot}} <div class="badge rounded-pill text-bg-warning text-uppercase">Hot!</div>{{/if}}
              {{#if isNew}}<div class="badge rounded-pill text-bg-primary">New</div>{{/if}}
            </div>
            <p>{{description}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  {{/with}}
</div>

<hr class="my-5">


  {{#with subscribe}}
  <div class="col-12">
    <div class="card text-bg-dark">
      <div class="card-body P-2">
      <div class="card-title"><h2>{{header}}</h2></div>
      <p class="mb-0 mt-3">{{description}}</p>
      {{#each buttons}}
      <div>
      <button href='{{link}}' class="btn btn-primary btn-sm mt-2">{{text}}</button>
      </div>
      {{/each}}
      </div>
    </div>
  </div>
  {{/with}}

  <hr class="my-5">

  {{#with service}}
  <div class="col-12">
    <div class="card text-bg-success">
      <div class="card-body text-center p-2">
      <div class="card-title"><h2>{{title}}</h2></div>
      <p class="mb-0 mt-3">{{description}}</p>
      {{#each buttons}}
      <div>
      <button href='{{link}}' class="btn btn-primary btn-sm mt-2">{{text}}</button>
      </div>
      {{/each}}
      </div>
    </div>
  </div>
  {{/with}}

  <hr class="my-5">

</main>
<footer>
  <div class="row">

  {{#each footer}}
    <div class="col-2 p-0">
