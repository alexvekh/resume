{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main>
  <div class="row g-2">
    <div class="col-8">
      {{#with formBlock}}
        <h1 class='py-3'>{{header}}</h1>
        {{rating.title}}: {{rating.value}}

        {{#with actionBlock}}
          <ul class="nav nav-tabs">
            {{#each tabs}}
              <li class="nav-item">
                <a class="nav-link 
                  {{#if isActive}} active{{/if}}
                " href="#">{{text}}</a>
              </li>
            {{/each}} 
          </ul>
        
          <hr class='my-5' />

        <div class="card">
          <div class="card-body py-2">
            {{#with report}}
              <div>{{title}}</div>
              <button class="btn btn-secondary btn-sm" href="{{button.link}}">{{button.text}} </button>
            {{/with}}
          </div>
        </div>
        {{/with}}

        <hr class='my-5' />

        {{#with feedbackBlock}}
          
          <div>
            <h3>{{title}}</h3>
            {{#each buttons}}
            <button class=" btn
                    {{#if isWarning}}btn-warning{{/if}} 
                    {{#if isSuccess}}btn-success{{/if}} 
                    {{#if isDanger}}btn-danger{{/if}} 
                btn-sm me-2" htef="{{link}}">{{text}}</button>
            {{/each}}
          </div>
        {{/with}}

    </div>

    <div class=col-4>
      {{#with goodsInfo}}
        <div class="card mt-3">
          <div class="card-body">
            <img src="{{photo}}" alt="{{name}}"> <br>
            <h6 class="mt-3 mb-0">{{name}}</h6>
          </div>
        </div>
        <div class="card mt-3">
          <div class="card-body">
            <div class="display-7"><b>{{price}}</b></div>
            <div>{{#if inMarket}} Є в наявності {{/if}} </div>
            {{#each buttons}}
              <div class="pt-2 pb-0"><button class="btn 
                              {{#if isPrimary}}btn-primary{{/if}} 
                              {{#if isSecondary}}btn-secondary{{/if}} 
                        btn-sm" htef="{{link}}">{{text}} </button></div>

            {{/each}}
          </div>
        </div>

        <div class="card mt-3">
          <div class="card-body py-2">
            {{seller.title}}: <b>{{seller.value}} </b>
          </div>
        </div>

      {{/with}}
    </div>
    {{/with}}
  </div>

    <hr class='my-5' />

    {{#each reviewList}}
      <div class="card my-5">
        <div class="card-body">
          <div class="card">
         
            <div class="card-header">
              {{#with title}}
                <div> <b> {{userName}}</b> </div>
                <div>{{caption}} </div>
                <div> {{date}}</div>
              {{/with}}
            </div>
          {{#with reviewBody}}
            <div class="card-body">
              <p class="mb-3"> {{#with seller}}{{title}}: {{value}} {{/with}}</p>
              <p class="mb-3"> {{#with rating}}{{title}}: {{value}} {{/with}}</p>
              {{#each text}}<p class="mb-3">{{this}}</p>{{/each}}
              <p class="mb-3"> {{#with advantages}} <b>{{title}}</b>: <br>{{text}} {{/with}}</p>
              <p class="mb-3"> {{#with disadvantages}}<b>{{title}}</b>: <br>{{text}} {{/with}}</p>
              <p class="my-0">
                {{#each images}} <img src="{{this}}" alt="photo"> {{/each}}
              </p>                
            </div>
          </div>

          <div class="row">
            <div class="col-1"></div>
            <div class="col-11">
              {{#each coments}}
              <div class="card mt-3"> 
                <div class="card-body pt-1 pb-0">
                  <p class="mb-1"><b>{{userName}}</b></p>
                  <p class="mb-1">{{date}}</p>
                  <p class="mb-1">{{text}}</p>
                </div>
              </div>
              {{/each}}
            </div>
          </div>
          {{/with}} {{!-- reviewBody  --}}
         {{!-- </div> --}}
        </div>
      </div>

    {{/each}}

{{> shopaction}}
<hr class='my-5' />
</main>

