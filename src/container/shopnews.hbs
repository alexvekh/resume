{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}


<main>

{{> breadcrumb}}

  <div>
    {{#with newsData}}
      <img src="{{photo}}" class="img-fluid mb-3" width="720" alt="{{head.heading}}">
      <h1>{{head.heading}}</h1>
      <p>{{head.description}}</p>
  </div>
  <div>
      {{#each body}}
        <h2>{{title}}</h2>
        <p>{{text}}</p>
      {{/each}}
  </div>        
    {{/with}}

<hr class="my-5">


<div class="row g-2">
{{#with newsOtherBlock}}
      <div class="display-6 text-center mt-5 mb-3"><b>{{title}}</b></div>
{{#each cards}}
  {{> shoppost}}
{{/each}}
{{/with}}
</div>
</div>

{{> shopaction}}

</main>




