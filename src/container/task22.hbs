{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<main>
  <div class='text-center'>
    <h1>{{page_header.title}}</h1>
    <p
      class='text-uppercase'
    >{{page_header.description}}</p>
  </div>
  <section>
    <div class='card card-body'>

      {{#with section}}
        {{#with about_us}}
          <div
            class='display-6 text-end'
          >{{title_list.main}}</div> br
          <h2 class='text-end'>{{title_list.sub}}</h2>

          <div class="card-body">
            <button
              class='btn btn-outline-info'
            >{{button.text}}</button>
          </div>
        {{/with}}
      
      </div>
      <br />
      <div class='card card-body'>
        {{#with advantage}}
          <div class='display-5'>{{title}}</div> <br>
          <div class='card card-body'>
            {{#with efficiency}}
              <div class="display-4">{{title}}</div> <br>
              <h6>{{sub_title}}</h6> <br>
              <p>{{description}}</p> <br>
              <div>
              <button class="btn btn-outline-warning">{{button}}</button>
              </div>
            {{/with}}
          </div>
          <br>

          <div class="card card-body">
            {{#with innovation}}
             <div class="display-4 text-center">{{title}}</div> <br>
              <h6 class="text-center">{{sub_title}}</h6> <br>
              <p class="text-center">{{description}}</p> <br>
              <div>
              <button class="btn btn-outline-warning">{{button}}</button>
              </div>
            {{/with}}
          </div>

          <div class="card card-body">
            {{#with collaboration}}
             <div class="display-4 text-end">{{title}}</div> <br>
              <h6 class="text-end">{{sub_title}}</h6> <br>
              <p class="text-end">{{description}}</p> <br>
              <div>
              <button class="btn btn-outline-warning">{{button}}</button>
              </div>
            {{/with}}
          </div>
        {{/with}}
      </div>
      <br>
      <div class="card card-body">
        {{#with agreement}}
        <div class="display-5">{{title}}</div> <br>
        <div class="card card-body">
          {{#with info}}
          <h5>{{sub_title}}</h5> <br>
          <p>{{detail.text}}</p> <br>
          <div><button class="btn btn-success">{{detail.button}}</button></div>

          {{/with}}

        </div>
        {{/with}}
      </div>


    {{/with}}
  </section>
</main>
