{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<div>
  {{#with program}}
    {{#with excursion}}
      <h1>{{name}}</h1>
      <div><strong>{{location.city}},
          {{location.country}}</strong></div>
      <div>{{date}}
      </div>
      {{#each program}}
        <section>
          <hr />
          <h2>{{name}}</h2>
          <div><strong>{{type}}</strong>
            ({{duration}}
            days)</div>
          {{#with details}}
            <section>
              {{#with museum}}
                <strong>{{name}}</strong>
                {{#with location}}
                  <address>{{address}},
                    {{city}},
                    {{country}}</address>

                {{/with}}

                <ul>
                  {{#each exhibits}}
                    <li><strong><mark
                        >{{name}}</mark></strong>
                      <em>{{artist}}</em>
                      <div>{{description}}</div>
                      <div>
                        {{#if audio_guide}}
                          Audio guide
                        {{/if}}</div></li>
                  {{/each}}</ul>

              {{/with}}
              {{#with venue}}
                <strong>{{name}}</strong>
                {{#with location}}
                  <address>{{address}},
                    {{city}},
                    {{country}}</address>
                {{/with}}

              {{/with}}
              <ul>
                {{#each performers}}
                  <li><strong><mark>{{name}}</mark></strong>
                    (<em>{{type}}</em>)
                  </li>
                {{/each}}
              </ul>
              <div>
                Guide:
                {{#with guide}}
                  <b>{{name}}</b>
                  <i>{{language}}</i>
                  (*{{rating}})
                {{/with}}
              </div>
            </section>

          {{/with}}

        </section>
      {{/each}}

    {{/with}}

  {{/with}}
</div>
{{!-- 
    Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
    Адже наш layout/default.hbs має вже структуру HTML
--}}