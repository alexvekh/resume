{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main>

    {{#with header}}
      <h1 class="py-3">{{title}}</h1>
      <button href="{{button.link}}">{{button.text}}</button>
    {{/with}}
    
    <hr class="my-5">
        
        
    {{#each goodsBlock}}

      {{> cartGoodItem}}
      
    {{/each}}

<hr class="my-5">
    <div>
      {{#with total}}
        <h3>{{title}}</h3>
        <div class="display-4"><b> {{amount}} </b></div>
        <div class="pb-2">{{delivery}}</div>
        {{#each buttons}}
        <div class="py-2">
        <button class="btn 
              {{#if isSuccess}} btn-success {{/if}}
              {{#if isOutline}} btn-outline-success {{/if}}
        " href="{{link}}">{{text}}</button>
        </div>

        {{/each}}

      {{/with}}
    </div>
    
    <hr class="my-5">
    
    {{#with goodsOtherBlock}}
      <h2 class="text-center">{{title}}</h2>
      <div class="row gx-2 gy-4">
        {{#each cards}}
            {{> shopcard}}
        {{/each}}
      </div>
    {{/with}}
    
    <hr class="my-5">
    
    {{#with subscribe}}
      <div class="col-12">
        <div class="card text-bg-dark">
          <div class="card-body P-2">
            <div class="card-title"><h2>{{header}}</h2></div>
            <p class="mb-0 mt-3">{{description}}</p>
            {{#each buttons}}
              <div>
                <button href='{{link}}' class="btn btn-primary btn-sm mt-2">{{text}}</button>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    {{/with}}
</main>






