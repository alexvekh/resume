<footer>
  <div class="row">
    {{#each footer}}
      <div class="col-2 p-0">
        {{#each this}}
          <div class="nav flex-column">
            <div class="nav-item">
              <a class="nav-link px-0
                      {{#if @last}} disabled {{/if}}
                  " href="{{link}}">{{text}}</a>
            </div>
          </div>
        {{/each}}
      </div>
    {{/each}}
  </div>    
</footer>