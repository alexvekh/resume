        {{!-- this catd maked for col-4 / 12 --}}
        
        <div class='card mb-3'>
          <img src='{{img}}' alt='photo' />
            <div class='card-body pt-1'>
            <div class='card-title'>
              <div>
                {{#if isHot}} <span 
                  class='badge rounded-pill text-bg-warning text-uppercase'>Hot!</span>
                {{/if}}
                {{#if isNew}} 
                  <span class='badge rounded-pill text-bg-primary '> New!</span>
                {{/if}}
              </div>
                {{#if isFast}} <div
            class='badge text-bg-success px-2 mt-3'
          >Швидка доставка</div>{{/if}}
                {{#if isNew}}<div
            class='badge text-bg-secondary px-2 mt-2'
          >Безкоштовна доставка</div>{{/if}}
              
              <h5 class="mt-3">{{name}}</h5>
              <div>{{review.amount}} {{review.text}}</div>
              <div class="display-6">{{price}}</div>
              <div>{{delivery}}</div>
              {{#each buttons}}
                <button class="btn 
                    {{#if isPrimary}} btn-primary {{/if}}
                    {{#if isSecondary}} btn-secondary {{/if}}
                mt-2" href="{{link}}">{{text}} </button>
              {{/each}}
              <ul class="mt-2">
                {{#each characteristics}}
                  <li>{{title}}: {{value}}</li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>